@using Humanizer
@model IList<ScheduleConfigViewModel>
@{
    ViewBag.Title = "Print Schedule";
    Layout = "_Layout";
}
<a class="govuk-back-link" asp-action="Index" asp-controller="Dashboard">Return to dashboard</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                Print schedule
                <span class="govuk-caption-xl">Next run scheduled: @if (Model.Any()) { @Model.First().RunTime; } else { @Html.Raw("Not Applicable"); }</span>
            </h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

            @if (!@Model.Where(m => !m.IsRecurring && m.RunTime <= DateTime.Now).Any())
            {
                <a class="govuk-button" asp-action="RunNow" asp-route-scheduleType="1">Run now</a>
            }

            @if (@Model.Any())
            {

                <table class="govuk-table">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header" scope="col">Is recurring</th>
                            <th class="govuk-table__header govuk-table__header--numeric" scope="col">Interval</th>
                            <th class="govuk-table__header govuk-table__header--numeric" scope="col">Run time</th>
                            <th class="govuk-table__header govuk-table__header--numeric" scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        @foreach (var result in @Model)
                        {
                            <tr class="govuk-table__row">
                                <td class="govuk-table__cell">@result.IsRecurring</td>
                                <td class="govuk-table__cell govuk-table__cell--numeric">@(result.ScheduleInterval.HasValue ? result.ScheduleInterval.Humanize(LetterCasing.Title) : result.Interval)</td>
                                <td class="govuk-table__cell govuk-table__cell--numeric">@result.RunTime</td>
                                <td class="govuk-table__cell govuk-table__cell--numeric"><a class="govuk-link" asp-action="Delete" asp-route-scheduleRunId="@result.Id">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
             
            }

            <p class="govuk-body">
                <a class="govuk-button" asp-action="Create">Create new</a>
            </p>
         

        </div>
    </div>
</main>