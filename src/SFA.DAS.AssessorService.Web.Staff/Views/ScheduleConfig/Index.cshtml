@using SFA.DAS.AssessorService.Web.Staff.Controllers
@model IList<SFA.DAS.AssessorService.Web.Staff.Controllers.ScheduleConfigViewModel>
@{
    ViewBag.Title = "Print Schedule";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-full">
        <a asp-action="Index">Refresh</a>

        <h1 class="heading-large">Print Schedule</h1>

        @if (@Model.Any())
        {
            <div class="form-group">
                <span class="bold">Next schedule: </span>@Model.First().RunTime.ToString("dd/MM/yyyy")

                <div>
                    <a asp-action="RunNow" asp-route-scheduleType="1" class="button">Run Now</a>
                </div>
            </div>

            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Schedule Type</th>
                            <th>Is Recurring</th>
                            <th>Interval</th>
                            <th>Run time</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in @Model)
                        {
                        <tr>
                            <td>@result.ScheduleType.GetDisplayName()</td>
                            <td>@result.IsRecurring</td>
                            <td>@(result.ScheduleInterval.HasValue ? result.ScheduleInterval.GetDisplayName() : result.Interval.ToString())</td>
                            <td>@result.RunTime.ToString("dd/MM/yyyy")</td>
                            <td><a asp-action="Delete" asp-route-scheduleRunId="@result.Id">Delete</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="form-group">
                <span class="bold">Next schedule: </span> Not Applicable
            </div>
        }

        <div class="form-group">
            <a asp-action="Create" class="button">Create New</a>
        </div>

    </div>
</div>