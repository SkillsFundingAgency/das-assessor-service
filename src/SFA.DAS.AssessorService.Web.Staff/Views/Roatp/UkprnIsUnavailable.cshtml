@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "UKRLP is unavailable";
}

<form asp-controller="AddRoatpOrganisation" asp-action="Back" method="post" name="backForm">
    <input type="hidden" name="action" value="EnterUkprn" />
    <a href="JavaScript:document.backForm.submit();" class="govuk-back-link">Back</a>
</form>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">UKRLP is unavailable</h1>
            
            <p class="govuk-body">We were unable to get information from UKRLP.</p>

            <p class="govuk-body">
                You'll need to <a asp-controller="AddRoatpOrganisation" asp-action="EnterUkprn">try <span class="govuk-visually-hidden">entering a UKPRN </span>again</a>.
            </p>
        </div>
    </div>
</main>
