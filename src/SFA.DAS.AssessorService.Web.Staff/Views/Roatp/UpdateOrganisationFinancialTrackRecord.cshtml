@model SFA.DAS.AssessorService.Web.Staff.ViewModels.Roatp.UpdateOrganisationFinancialTrackRecordViewModel

@using SFA.DAS.AssessorService.Web.Staff
@using SFA.DAS.AssessorService.Web.Staff.Domain

@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Change financial track record";
}

<form asp-controller="RoatpSearch" asp-action="SearchResults" method="post" name="backForm">
    <a href="JavaScript:document.backForm.submit();" class="govuk-back-link">Back</a>
</form>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="js-error-summary govuk-error-summary" role="alert" aria-labelledby="error-summary-title" tabindex="-1" data-module="error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">
                    There is a problem
                </h2>
                <div class="govuk-error-summary__body">
                    <ul class="js-error-summary-list govuk-list govuk-error-summary__list"></ul>
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            <li><a sfa-validation-for="FinancialTrackRecord"></a></li>
                        </ul>
                    </div>
                </div>
            }

            <h1 class="govuk-heading-xl">Change financial track record for <span class="das-break-word">@Html.Raw(Model.LegalName)</span></h1>

            <form method="post" asp-action="UpdateFinancialTrackRecord" asp-controller="UpdateRoatpOrganisation">
                @Html.HiddenFor(x => x.OrganisationId)
                <div class="govuk-form-group">
                    <div class="govuk-radios govuk-radios--inline">
                        <div class="govuk-radios__item">
                            <input asp-for="FinancialTrackRecord" class="govuk-radios__input" id="radio-1"
                                    name="FinancialTrackRecord" type="radio" value="true" />
                            <label class="govuk-label govuk-radios__label" for="radio-1">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="FinancialTrackRecord" class="govuk-radios__input" id="radio-2"
                                    name="FinancialTrackRecord" type="radio" value="false" />
                            <label class="govuk-label govuk-radios__label" for="radio-2">
                                No
                            </label>
                        </div>
                    </div>
                </div>
                <input type="submit" class="govuk-button" value="Change" />
            </form>
        </div>
    </div>
</main>