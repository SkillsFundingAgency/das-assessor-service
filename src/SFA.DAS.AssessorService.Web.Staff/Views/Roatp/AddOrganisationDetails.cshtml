@model SFA.DAS.AssessorService.Web.Staff.ViewModels.Roatp.AddOrganisationViewModel

@using SFA.DAS.AssessorService.Web.Staff
@using SFA.DAS.AssessorService.Web.Staff.Domain
@{ ViewBag.Title = "Enter details"; }

@{ await Html.RenderPartialAsync("_StylesPartial"); }

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge roatp-heading">Enter details</h1>
    </div>
</div>
<div class="govuk-width-container">

    <main class="govuk-main-wrapper " id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form method="post" asp-action="AddOrganisationPreview" asp-controller="Roatp">

                    @Html.Hidden("ProviderTypeId", Model.OrganisationTypeId)

                    <div class="govuk-form-group">
                        <label for="LegalName" class="roatp-label">Legal name</label>
                        <input id="LegalName" name="LegalName" type="text" class="roatp-input" />
                    </div>
                    <div class="govuk-form-group">
                        <label for="UKPRN" class="roatp-label">UKPRN</label>
                        <input id="UKPRN" name="UKPRN" type="text" class="roatp-input govuk-!-width-one-third" />
                    </div>

                    <div class="govuk-form-group">
                        <label class="roatp-label" for="OrganisationTypeId">
                            Type of organisation
                        </label>
                        <select class="roatp-select" id="OrganisationTypeId" name="OrganisationTypeId">
                            @foreach (var organisationType in Model.OrganisationTypes)
                            {
                                <option value="@organisationType.Id">@organisationType.Type</option>
                            }
                        </select>
                    </div>

                    <div class="govuk-form-group">
                        <label for="CompanyNumber" class="roatp-label">Company number, if applicable</label>
                        <input id="CompanyNumber" name="CompanyNumber" type="text" class="roatp-input govuk-!-width-one-third" />
                    </div>
                    <div class="govuk-form-group">
                        <label for="CharityNumber" class="roatp-label">Charity registration number, if applicable</label>
                        <input id="CharityNumber" name="charityNumber" type="text" class="roatp-input govuk-!-width-one-third" />
                    </div>

                    <div class="govuk-form-group">
                        <label for="TradingName" class="roatp-label">Trading name, if applicable</label>
                        <input id="TradingName" name="TradingName" type="text" class="roatp-input" />
                    </div>

                    <input type="submit" class="roatp-button" value="Add" />
                </form>
            </div>
        </div>
    </main>
</div>