@{
    ViewData["Title"] = "ESFA admin services";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">ESFA admin services</h1>
        <p>Use this service to:</p>
        <ul class="list list-bullet">
            <li>evaluate applications</li>
            <li>manage existing accounts</li>
            <li>view and download reports</li>
            <li>issue certificates</li>
        </ul>
        <div class="form-group">
            <a asp-action="SignIn" asp-controller="Account" class="button button-start">Start now</a>
        </div>
    </div>
</div>