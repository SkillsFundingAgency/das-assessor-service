@using SFA.DAS.AssessorService.Web.Staff.Controllers
@model RegisterViewAndEditContactViewModel
@{
    ViewBag.Title = "View Contact";
    Layout = "_Layout";
}
<div class="grid-row">
    <div class="column-two-thirds">
        <a asp-action="Index" asp-controller="Register" class="link-back">Return to organisation search</a>
        
        <h1>
            <label class="form-label" for="">
                <span class="heading-xlarge">View Contact</span>
            </label>
        </h1>

        <div id="organisationWrapper">
               
            <label for="Organisation">
                <span class="form-label-bold">Organisation</span>
                <a href="/register/view-organisation/@Model.OrganisationId">@Model.OrganisationName</a>
            </label>
            <label for="DisplayName">
                <span class="form-label-bold">Contact Name</span>
                @Model.DisplayName
            </label>
            <label for="Email">
                <span class="form-label-bold">Email</span>
                @Model.Email
            </label>
            <label for="PhoneNumber">
                <span class="form-label-bold">Phone Number</span>
                @Model.PhoneNumber
            </label>
        </div>
        <div class="form-group">
            <a class="button" href="/register/edit-contact/@Model.ContactId">Edit</a>
        </div>
    </div>
</div>
