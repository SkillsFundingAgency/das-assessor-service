@using SFA.DAS.AssessorService.Web.Staff.Controllers
@using SFA.DAS.AssessorService.Web.Staff.Domain
@model SFA.DAS.AssessorService.Web.Staff.Models.RegisterViewModel
@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Organisation search";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a asp-action="Index" asp-controller="Dashboard" class="link-back">Return to dashboard</a>

        <form class="register-search-form" asp-action="Results" asp-controller="Register" method="get">

            @* hidden with js *@
            <div class="js-error-summary error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                    There is a problem
                </h2>
                <ul class="js-error-summary-list error-summary-list"></ul>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
            <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                    There is a problem
                </h2>
                <ul class="error-summary-list">
                    <li><a sfa-validation-for="SearchString"></a></li>
                </ul>
            </div>
            }

            <div sfa-anyvalidationerror-class="after-error-summary">
                <h1>
                    <label class="form-label" for="SearchString">
                        <span class="heading-xlarge">Organisation search</span>
                    </label>
                </h1>

                <p>Search using either the:</p>
                <ul class="list list-bullet">
                    <li>UKPRN</li>
                    <li>organisation ID (EPAXXXX)</li>
                    <li>name</li>
                </ul>

                <div class="form-group" sfa-validation-for="SearchString" sfa-anyvalidationerror-class="form-group-error">
                    <span class="error-message" asp-validation-for="SearchString"></span>
                    <input class="form-control" asp-for="SearchString" name="SearchString" sfa-validationerror-class="form-control-error" type="text" />
                </div>
            </div>

            <div class="form-group">
                <button class="button" type="submit">Search<span class="visually-hidden"> for an organisation</span></button>
            </div>
            
            <div class="form-group" sfa-show-for-roles="@string.Join(",", Roles.AssessmentDeliveryTeam, Roles.CertificationTeam)">
                <a class="button" href="/register/add-organisation">Add new<span class="visually-hidden"> organisation</span></a>
            </div>
        </form>

    </div>  
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{ await Html.RenderPartialAsync("~/Views/Register/_RegisterScriptsPartial.cshtml"); }
}