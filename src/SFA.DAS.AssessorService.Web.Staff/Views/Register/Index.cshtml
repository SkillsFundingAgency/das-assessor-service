@using SFA.DAS.AssessorService.Web.Staff.Controllers
@model SFA.DAS.AssessorService.Web.Staff.Models.RegisterViewModel
@{
    ViewBag.Title = "Search Page";
    Layout = "_Layout";
}
<div class="grid-row">
    <div class="column-two-thirds">
        <form asp-action="Results" asp-controller="Register" method="get">
            <div class="form-group">
                <h1>
                    <label class="form-label" for="SearchString">
                        <span class="heading-xlarge">Organisation search</span>
                        <span class="form-hint">Search by ukprn, OrganisationID (EPAXXXX) or name</span>
                    </label>
                </h1>
                <input class="form-control" asp-for="SearchString" />
            </div>
            @if (!string.IsNullOrEmpty(@Model.ErrorMessage))
            {
                <div id="validation-messages">
                    @Model.ErrorMessage
                </div>
                <div>
                    &nbsp;
                </div>
                <div>
                    &nbsp;
                </div>
            }
            <button class="button" type="submit">Search</button>
            
        </form>
        <div>&nbsp;</div>
        <div><a class="button">Add New</a></div>
    </div>  
</div>