@model SFA.DAS.AssessorService.Web.Staff.ViewModels.CertificateDateViewModel

@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Apprenticeship achievement date";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        @if (Model.FromApproval)
        {
            <a class="link-back" asp-controller="CertificateAmend" asp-action="Check" asp-route-fromapproval = "true" asp-route-certificateId=@Model.Id>Back</a>
        }
        else
        {
            <a class="link-back" asp-controller="CertificateAmend" asp-action="Check" asp-route-certificateId=@Model.Id>Back</a>
        }

            <form class="apprentice-date-form" type="post" asp-controller="CertificateDate">
                <input type="hidden" name="fullDate" id="fullDate" class="date-input" />
                @Html.HiddenFor(c => c.Id)
                @Html.HiddenFor(m => m.StartDate)
                @Html.HiddenFor(c => c.FromApproval)
                <input type="hidden" name="WarningShown" id="WarningShown" value="@Model.WarningShown" />

                @* hidden with css by default *@
                <div class="js-error-summary error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                        There is a problem
                    </h2>
                    <ul class="js-error-summary-list error-summary-list"></ul>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                        <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                            There is a problem
                        </h2>
                        <ul class="error-summary-list">
                            <li><a sfa-validation-for="Date"></a></li>
                            <li><a sfa-validation-for="Day"></a></li>
                            <li><a sfa-validation-for="Month"></a></li>
                            <li><a sfa-validation-for="Year"></a></li>
                            <li><a sfa-validation-for="ReasonForChange"></a></li>
                        </ul>
                    </div>
                }

                <div sfa-anyvalidationerror-class="after-error-summary">
                    <div id="Date">
                        <h1 class="heading-medium">
                            @*<span class="heading-secondary">@Model.GivenNames @Model.FamilyName</span>*@
                            What's the apprenticeship achievement date?
                        </h1>
                    </div>

                    <div class="form-group error-message-container" sfa-anyvalidationerror-class="form-group-error">
                        <span class="form-hint">
                            For example, 15 10 2017
                        </span>
                        <div class="form-date">
                            <div class="form-group form-group-day">
                                <label for="Day">Day</label>
                                <input class="form-control date-input js-integers-only" sfa-validation-for="Day" sfa-validationerror-class="form-control-error" asp-for="Day" type="text" maxlength="2" />
                            </div>

                            <div class="form-group form-group-month">
                                <label for="Month">Month</label>
                                <input class="form-control date-input js-integers-only" sfa-validation-for="Month" sfa-validationerror-class="form-control-error" asp-for="Month" type="text" maxlength="2" />
                            </div>

                            <div class="form-group form-group-year">
                                <label for="Year">Year</label>
                                <input class="form-control date-input js-integers-only" sfa-validation-for="Year" sfa-validationerror-class="form-control-error" asp-for="Year" type="text" maxlength="4" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group" sfa-validation-for="ReasonForChange" sfa-validationerror-class="form-group-error">
                        <label for="ReasonForChange">
                            <span class="form-label-bold">Reason for change</span>
                            <span class="form-hint">Please could you provide more detail as to why this change is required.</span>
                            <span class="error-message" asp-validation-for="ReasonForChange"></span>
                        </label>
                        <textarea class="form-control form-control-3-4" rows="5" name="ReasonForChange" sfa-validation-for="ReasonForChange" sfa-validationerror-class="form-control-error" asp-for="ReasonForChange"></textarea>
                    </div>
                </div>

                <details>
                    <summary><span class="summary">Whatâ€™s an apprenticeship achievement date?</span></summary>
                    <div class="panel panel-border-narrow" id="what-is-the-apprenticeship-achievement-date">
                        <p>
                            The achievement date is the date you confirmed the apprentice completed the apprenticeship.
                        </p>
                    </div>
                </details>
                <button type="submit" class="button">Continue</button>
            </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{await Html.RenderPartialAsync("~/Views/CertificateAmend/_DateScriptsPartial.cshtml"); }
}