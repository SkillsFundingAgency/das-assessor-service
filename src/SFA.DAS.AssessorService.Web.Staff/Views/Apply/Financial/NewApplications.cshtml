@using SFA.DAS.AssessorService.Web.Staff.Helpers
@model List<SFA.DAS.AssessorService.Web.Staff.ViewModels.Apply.Financial.NewFinancialApplicationViewModel>

@{
    ViewBag.Title = "New applications";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a href="@Url.Action("Dashboard", "Financial")" class="link-back">Return to account home</a>

        <h1 class="heading-xlarge">New applications</h1>
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="grid-row">
        <div class="column-full">
            <table class="table-spaced">
                <thead>
                    <tr>
                        <th>Applying organisation</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var application in Model)
                    {
                        <tr>
                            <td>@application.ApplyingOrganisationName</td>
                            <td>@FinancialApplicationReviewHelpers.TranslateApplicationStatus(application.Status)</td>
                            <td class="numeric"><a asp-action="ViewApplication" asp-controller="Financial" asp-route-applicationId="@application.ApplicationId">@FinancialApplicationReviewHelpers.ApplicationLink(application.Status)</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
}
else
{
    <div class="form-group">
        <p class="lede">There are no new applications.</p>
    </div>
}

<div class="form-group">
    <a asp-controller="Financial" asp-action="Dashboard" class="govuk-button">Return to account home</a>
</div>