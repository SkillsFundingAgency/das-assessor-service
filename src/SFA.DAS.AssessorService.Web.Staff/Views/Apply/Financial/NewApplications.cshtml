@model List<SFA.DAS.AssessorService.Web.Staff.ViewModels.NewFinancialApplicationViewModel>

@{
    ViewBag.Title = "New applications";
    Layout = "_Layout";
}


<a href="@Url.Action("Dashboard", "Financial")" class="govuk-back-link">Back</a>

<h2>New applications</h2>

<table>
    <tr>
        <th>Applying organisation</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var application in Model)
    {
        <tr>
            <td>@application.ApplyingOrganisationName</td>
            <td>@application.Status</td>
            <td><a asp-action="ViewApplication" asp-controller="Financial" asp-route-applicationId="@application.ApplicationId">@application.LinkText</a></td>
        </tr>
    }
</table>
