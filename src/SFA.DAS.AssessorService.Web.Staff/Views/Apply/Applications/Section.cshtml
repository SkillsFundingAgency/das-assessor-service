@using SFA.DAS.AssessorService.ApplyTypes;
@model SFA.DAS.AssessorService.Web.Staff.ViewModels.Apply.Applications.ApplicationSectionViewModel

@{
    ViewBag.Title = @Model.Title;
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-full">
        <a href="@Url.Action("Application", "Application", new {applicationId = Model.ApplicationId})" class="link-back">Back</a>
        @if (Model == null)
        {
            <h1 class="heading-xlarge">Sequence not active</h1>
        }
        else
        {
            <h1 class="heading-xlarge">@Model.Title</h1>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                        There is a problem
                    </h2>
                    <ul class="error-summary-list">
                        <li><a sfa-validation-for="FeedbackMessage"></a></li>
                    </ul>
                </div>
            }

            if (Model.SequenceId == 1 && Model.SectionId == 3)
            {
                // NOTE: The FHA Section has a read only view. See ON-1277
                var financialApplication = Model.Section.QnAData?.FinancialApplicationGrade;
                var financialApplicationComments = financialApplication.InadequateMoreInformation ?? financialApplication.SatisfactoryMoreInformation;

                <div class="form-group">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Grade</th>
                                <th>Date reviewed</th>
                                <th>Comments</th>
                                <th>Reviewer</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@financialApplication.SelectedGrade</td>
                                <td>@financialApplication.GradedDateTime.ToShortDateString()</td>
                                <td>@financialApplicationComments</td>
                                <td>@financialApplication.GradedBy</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <dl class="govuk-check-your-answers cya-questions-short form-group">
                    @foreach (var pg in Model.Section.QnAData.Pages.Where(p => p.Active))
                    {
                        <div class="govuk-check-your-answers__contents">
                            <dt class="cya-question heading-medium">
                                @pg.LinkTitle
                            </dt>

                            <dd class="cya-answer">
                                @foreach (var answerPage in pg.DisplayAnswerPages)
                                {
                                    foreach (var answer in answerPage.DisplayAnswers)
                                    {
                                        <h3 class="heading-small">@answer.Label</h3>
                                        <p>@answer.Answer</p>
                                    }
                                }
                            </dd>

                            <dd class="cya-change das-cya-change--responsive">
                                @if (pg.HasNewFeedback)
                                {
                                    <div class="govuk-tag form-group">
                                        Feedback added
                                    </div>
                                }
                                @if (pg.HasCompletedFeedback)
                                {
                                    <div class="govuk-tag form-group">
                                        Answer updated
                                    </div>
                                }

                                <p>
                                    <a class="nowrap" href="@Url.Action("Page", "Application", new {applicationId = Model.ApplicationId, sequenceId = Model.SequenceId, sectionId = Model.SectionId, pageId = pg.PageId})">
                                        @if (pg.HasNewFeedback)
                                        {
                                            <text>View or add feedback</text>
                                        }
                                        else
                                        {
                                            <text>Add feedback</text>
                                        }
                                    </a>
                                </p>
                            </dd>

                        </div>
                    }
                </dl>
            }

            if (Model.Section.QnAData.HasCompletedFeedback)
            {
                <div class="form-group">
                    <label class="form-label-bold">
                        Comment history
                    </label>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var feedback in Model.Section.QnAData.Feedback.Where(f => f.IsCompleted))
                            {
                                <tr>
                                    <td>@feedback.Date.ToShortDateString()</td>
                                    <td>@feedback.Message</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="form-group">
                <form asp-action="EvaluateSection" asp-controller="Application" asp-route-applicationId="@Model.ApplicationId" asp-route-sequenceId="@Model.SequenceId" asp-route-sectionId="@Model.SectionId">
                    <div>
                        <div class="form-group error-message-container" sfa-anyvalidationerror-class="form-group-error">
                            <div data-target="show-feedback-input">
                                <input asp-for="AddFeedbackMessage" type="checkbox" value="true" />
                                <label>
                                    Add a comment to the @Model.Title.ToLower() section
                                </label>
                            </div>
                            <div class="panel panel-border-narrow js-hidden" id="show-feedback-input">
                                <span class="error-message" asp-validation-for="FeedbackMessage"></span>
                                <textarea class="form-control form-control-full" rows="5" sfa-validation-for="FeedbackMessage" sfa-validationerror-class="form-control-error" asp-for="FeedbackMessage"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label-bold">
                                Is this section complete?
                            </label>
                            <div class="multiple-choice">
                                <input asp-for="IsSectionComplete" id="options_yes" type="radio" value="True" />
                                <label for="options_yes">
                                    Yes
                                </label>
                            </div>
                            <div class="multiple-choice">
                                <input asp-for="IsSectionComplete" id="options_no" type="radio" value="False" />
                                <label for="options_no">
                                    No
                                </label>
                            </div>
                        </div>
                        <button class="button" type="submit">Save</button>
                    </div>
                </form>
            </div>
        }

        <div class="form-group">
            <a href="@Url.Action("Application", "Application", new { applicationId = Model.ApplicationId })" class="govuk-button">Return to application overview</a>
        </div>
    </div>
</div>