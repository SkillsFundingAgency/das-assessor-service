@model SFA.DAS.AssessorService.ApplyTypes.ApplicationSection

@{
    ViewBag.Title = @Model.Title;
    Layout = "_Layout";
}

<a href="@Url.Action("Application", "Application", new {applicationId = Model.ApplicationId})" class="govuk-back-link">Back</a>
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @if (Model == null)
            {
                <h1 class="govuk-heading-xl">Sequence not active</h1>
            }
            else
            {
                <h1 class="govuk-heading-xl">@Model.Title</h1>
                                                         
                <dl class="app-check-your-answers app-check-your-answers--short">
                    @foreach (var pg in Model.QnADataObject.Pages.Where(p => p.Active))
                    {
                        <div class="app-check-your-answers__contents">
                            <dt class="app-check-your-answers__question">
                                @pg.LinkTitle
                                @foreach (var answerPage in pg.DisplayAnswerPages)
                                {
                                    <div>
                                        @foreach (var answer in answerPage.DisplayAnswers)
                                        {
                                            <b>@answer.Label :</b>
                                            <span>@answer.Answer</span>
                                        }
                                    </div>
                                }
                                
                                @if (pg.HasNewFeedback)
                                {
                                    <span class="form-label-bold">Feedback added</span>
                                }
                                @if (pg.HasReadFeedback)
                                {
                                    <span class="form-label-bold">Answer updated</span>
                                }
                                
                                
                                <a href="@Url.Action("Page", "Application", new {applicationId = Model.ApplicationId, sequenceId = Model.SequenceId, sectionId = Model.SectionId, pageId = pg.PageId})">
                                    Add feedback
                                </a>
                            </dt>
                        </div>
                    }
                </dl>

                <a href="@Url.Action("Application", "Application", new {applicationId = Model.ApplicationId})" class="govuk-button">Return to application overview</a>
            }
        </div>
    </div>
</main>