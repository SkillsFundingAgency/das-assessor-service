@using SFA.DAS.AssessorService.Web.Staff
@using SFA.DAS.AssessorService.Web.Staff.Domain
@{ ViewBag.Title = "Staff Dashboard"; }

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Staff dashboard</h1>
    </div>
</div>
<div class="grid-row">
    <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.OperationsTeam, Roles.CertificationTeam)">
        <h2 class="heading-medium"><a asp-controller="Search">Search</a></h2>
        <p>Search by learner name, ULN, certificate reference or EPAO ID.</p>
    </div>
    <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.OperationsTeam, Roles.CertificationTeam)">
        <h2 class="heading-medium"><a asp-controller="BatchSearch">Batch search</a></h2>
        <p>View current batches and search for certificates by batch number.</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.CertificationTeam, Roles.AssessmentDeliveryTeam, Roles.RegisterViewOnlyTeam)">
        <h2 class="heading-medium"><a asp-controller="Register">Register of EPAO</a></h2>
        <p>Search for add and edit EPAOs and standards. Add and edit contacts. Make standards and/or organisations live.</p>
    </div>
    <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.OperationsTeam, Roles.CertificationTeam)">
        <h2 class="heading-medium"><a asp-controller="ScheduleConfig">Print schedule configuration</a></h2>
        <p>Print certificates. Create, delete and view existing print schedules.</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.OperationsTeam, Roles.CertificationTeam, Roles.AssessmentDeliveryTeam)">
        <h2 class="heading-medium"><a asp-controller="Reports">Reports</a></h2>
        <p>On demand reporting.</p>
    </div>
    <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.OperationsTeam, Roles.CertificationTeam)">
        <h2 class="heading-medium"><a asp-controller="CertificateApprovals" asp-action="New">Privately funded certificate approvals</a></h2>
        <p>A table of privately funded certificates with options to approve, send for approval or reject.</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.OperationsTeam, Roles.CertificationTeam)">
        <h2 class="heading-medium"><a asp-controller="ExternalApi">External API</a></h2>
        <p>Manage user's access and generate API keys.</p>
    </div>
    <div class="column-half">
        <div class="grid-row">
            <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.ProviderRiskAssuranceTeam, Roles.CertificationTeam)">
                <h2 class="heading-medium"><a asp-controller="Financial" asp-action="OpenApplications">Financial</a></h2>
                <p>Financial</p>
            </div>
            <div class="column-half" sfa-show-for-roles="@string.Join(",", Roles.AssessmentDeliveryTeam, Roles.CertificationTeam)">
                <h2 class="heading-medium"><a asp-controller="Application" asp-action="MidpointApplications">Applications</a></h2>
                <p>Review Applications</p>
            </div>

        </div>
    </div>
</div>
<div class="grid-row">
    <div class="column-half" sfa-show-for-roles="@Roles.RoatpGatewayTeam">
        <h2 class="heading-medium"><a asp-controller="RoatpHome" asp-action="Index">Register of Apprenticeship Training Providers</a></h2>
        <p>Search for add and edit Apprenticeship Training Providers</p>
    </div>
</div>