@model SFA.DAS.AssessorService.Web.ViewModels.ChangePhoneNumberViewModel

@{
    var viewTitle = "Contact phone number updated";
    ViewBag.Title = viewTitle;
    Layout = "_DashboardLayout";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    @viewTitle
                </h1>
                <div class="govuk-panel__body">
                    <div class="govuk-!-margin-bottom-6">
                        New contact phone number is<br>
                        <strong>@Model.PhoneNumber</strong>
                    </div>
                </div>
            </div>
            <p class="govuk-body">An email has been sent to the following people in your organisation:</p>
            <ul class="govuk-list govuk-list--bullet">
                @foreach (var contact in Model.Contacts)
                {
                    <li>@contact.DisplayName</li>
                }
            </ul>
            <h1 class="govuk-heading-l">What do you want to do next?</h1>
            <span class="govuk-body">
                <a class="govuk-link" asp-controller="Organisation" asp-action="OrganisationDetails">View organisation details</a>
            </span><br />
            <span class="govuk-body">
                <a class="govuk-link" asp-controller="Dashboard" asp-action="Index">Back to the dashboard</a>
            </span>
        </div>
    </div>
</main>