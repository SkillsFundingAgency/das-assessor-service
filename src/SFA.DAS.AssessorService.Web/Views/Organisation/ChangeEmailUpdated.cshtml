@model SFA.DAS.AssessorService.Web.ViewModels.ChangeEmailViewModel

@{
    var viewTitle = "Email address updated";
    ViewBag.Title = viewTitle;
    Layout = "_DashboardLayout";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    @viewTitle                   
                </h1>
                <div class="govuk-panel__body">
                    <div class="govuk-!-margin-bottom-6">
                        New email address is<br>
                        <strong>@Model.Email</strong>
                    </div>
                </div>
            </div>
            <h1 class="govuk-heading-l">What do you want to do next?</h1>
            <span class="govuk-body">
                <a class="govuk-link" asp-controller="Organisation" asp-action="OrganisationDetails">View organisation details</a>
            </span><br />
            <span class="govuk-body">
                <a class="govuk-link" asp-controller="Dashboard" asp-action="Index">Back to the dashboard</a>
            </span>
        </div>
    </div>
</main>