@model SFA.DAS.AssessorService.Web.ViewModels.Account.ChangeSignInDetailsViewModel
<a class="govuk-back-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row" >
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                Change your sign-in details
            </h1>
            <p>You use your GOV.UK One Login to sign in to Manage apprenticeships.</p>
            <p>You can change these details for your GOV.UK One Login:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>email address</li>
                <li>password</li>
                <li>how you get security codes to sign in</li>
            </ul>
            <p><a href="@Model.SettingsLink" class="govuk-link" target="_blank" rel="external">Change your sign-in details for your GOV.UK One Login (opens in new tab)</a></p>
        </div>
    </div>
</main>