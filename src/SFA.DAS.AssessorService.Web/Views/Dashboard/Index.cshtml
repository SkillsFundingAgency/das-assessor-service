@model SFA.DAS.AssessorService.Web.ViewModels.Dashboard.DashboardStatisticsModel
@using SFA.DAS.AssessorService.Web.Infrastructure
@using SFA.DAS.AssessorService.Web.StartupConfiguration
@inject ISessionService SessionService
@{
    ViewData["Title"] = "Home";
    Layout = "_DashboardLayout";
}

<div>
    <div class="grid-row">
        <div class="column-one-third">
            <div class="dashboard-box">
                <div class="dashboard-box-content">
                    <div class="data data-color">
                        <span class="data-item bold-xxlarge">@Model.StandardsCount</span>
                        <span class="data-item bold-small">Standards</span>
                    </div>
                    <div>
                        <ul class="dashboard__link-list">
                            <li class="dashboard__link">
                                <a asp-controller="OrganisationStandards" asp-action="Index">Standards you are approved for</a>
                            </li>
                            @*<li class="dashboard__link">
                                    <a href="">Apply to assess a new standard</a>
                                </li>*@
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="column-one-third">
            <div class="dashboard-box">
                <div class="dashboard-box-content">
                    <div class="data data-color">
                        <span class="data-item bold-xxlarge">@Model.PipelinesCount</span>
                        <span class="data-item bold-small ">Pipeline for EPAs</span>
                    </div>
                    <div>
                        <ul class="dashboard__link-list">
                            <li class="dashboard__link ">
                                <a asp-controller="OrganisationStandards" asp-action="Pipeline">View pipeline</a>
                            </li>
                            <li class="dashboard__link">
                                <a asp-controller="Search" asp-action="Index">Record an EPA grade</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
        <div class="column-one-third">
            <div class="dashboard-box">
                <div class="dashboard-box-content">
                    <div class="data data-color">
                        <span class="data-item bold-xxlarge">@Model.AssessmentsCount</span>
                        <span class="data-item bold-small">Assessments</span>
                    </div>
                    <div>
                        <ul class="dashboard__link-list">
                            <li class="dashboard__link">
                                <a asp-controller="CertificateHistory" asp-action="Index">Show completed assessments</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-row">
        <div class="column-one-half">
            <div class="dashboard-box">
                <div class="dashboard-box-content">
                    <div class="data data-color">
                        <span class="data-item bold-medium">Organisation</span>
                    </div>
                    <div>
                        <ul class="dashboard__link-list">
                            <li class="dashboard__link ">
                                <a asp-controller="Organisation" asp-action="OrganisationDetails">View Details</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="column-one-half">
            <div class="dashboard-box">
                <div class="dashboard-box-content">
                    <div class="data data-color">
                        <span class="data-item bold-medium">Use the API</span>
                    </div>
                    <div class="data">
                        <span class="data-item font-small">Connect your organisations own systems directly with the register for end point assessments.</span>
                    </div>
                    <div>
                        <ul class="dashboard__link-list">
                            <li>
                                <a sfa-show-for-policy="@Policies.ExternalApiAccess" asp-controller="ExternalApi" asp-action="Index">External API keys</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

