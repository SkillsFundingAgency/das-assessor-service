@using SFA.DAS.AssessorService.Web.Extensions
@inject SFA.DAS.AssessorService.Settings.IWebConfiguration webConfiguration

@{
    var snippetUrl = $"https://static.zdassets.com/ekr/snippet.js?key={webConfiguration.ZenDeskSnippetKey}";
    var cobrowsingSnippetUrl = $"https://embed-euw1.rcrsv.io/{webConfiguration.ZenDeskCobrowsingSnippetKey}?zwwi=1";   
}

<script type="text/javascript">
    window.zESettings = {
        webWidget: {
            contactForm: {
                attachments: false
            },
            chat: {
                menuOptions: {
                    emailTranscript: false
                }
            },
            helpCenter: {
                filter: {
                    section: @webConfiguration.ZenDeskSectionId
                }
            }
        }
    };
</script>
<script id="ze-snippet" src="@snippetUrl"></script>
<script id="co-snippet" src="@cobrowsingSnippetUrl"></script>
@Html.SetZenDeskLabels(new string[] { ViewBag.ZenDeskLabel })