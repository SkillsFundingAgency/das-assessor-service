@using SFA.DAS.AssessorService.Web.Helpers;
@model HomeIndexViewModel
@{
    ViewData["Title"] = "Apprenticeship assessment service";
    ViewBag.ZenDeskLabel = "ass-start-page";
    Layout = "_Layout";
    var actionName = "CreateAnAccount";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Apprenticeship assessment service</h1>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">If you're an end-point assessor, you can use this service to:</p>

            <ul class="govuk-list govuk-list--bullet">
                <li>view the standards and versions you are assessing</li>
                <li>see upcoming assessments in your pipeline</li>
                <li>record assessments and request certificates</li>
                <li>add new standards or versions</li>
            </ul>

            <p class="govuk-body">
                You’ll need a GOV.UK One Login to set up or access an account. You can create one in the service using a work email address.
            </p>
            
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-!-margin-top-2 govuk-!-margin-bottom-8">
                <p class="govuk-body">
                    <a asp-action="SignIn" asp-controller="Account" role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-bottom-0" data-module="govuk-button">
                        Start now
                        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                        </svg>
                    </a>
                    <span class="das-inline-button-link das-inline-button-link--start">
                        <span class="govuk-body">or <a class="govuk-link" asp-action="@actionName" asp-controller="Account">create an account</a></span>
                    </span>
                </p>
            </div>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-heading-m">Before you start</h2>
            <p class="govuk-body">If your organisation does not have an existing account, you'll need to join the Apprenticeship assessment service.</p>

            <p class="govuk-body">Contact our helpdesk:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>email <a class="govuk-link" href="mailto:helpdesk@manage-apprenticeships.service.gov.uk">helpdesk@manage-apprenticeships.service.gov.uk</a></li>
                <li>phone 08000 150 600</li>
            </ul>
        </div>
    </div>
</main>