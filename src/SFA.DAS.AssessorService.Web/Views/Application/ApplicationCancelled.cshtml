@model SFA.DAS.AssessorService.Web.ViewModels.Apply.ApplicationCancelledViewModel
@{
    ViewBag.Title = "You've successfully cancelled your application";
    Layout = "_Layout";
}

<main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="post">
                <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">
                        You've cancelled your application to assess standard @Model.StandardWithReference
                    </h1>
                </div>

                <p class="govuk-body">
                    We've sent you an email to confirm that your application has been cancelled.
                </p>

                <h2 class="govuk-heading-m govuk-!-margin-top-6">
                    What happens next
                </h2>

                <p class="govuk-body">
                    Your application for stage 1 is still valid, so you can start again and
                    <a asp-action="SequenceSignPost" asp-controller="Application" asp-route-id="@Model.Id" class="govuk-link govuk-link--no-visited-state">apply for a standard</a>
                </p>
            </form>
        </div>
    </div>
</main>