@using SFA.DAS.AssessorService.Web.ViewModels
@using SFA.DAS.AssessorService.Domain.Extensions
@model SFA.DAS.AssessorService.Web.ViewModels.Apply.StandardVersionViewModel

@{
    ViewBag.Title = "Confirm Standard";
    Layout = "_Layout";
    bool showConfirmedError = TempData["ShowConfirmedError"] as bool? ?? false;
    bool showVersionError = TempData["ShowVersionError"] as bool? ?? false;
    var standardCode = Model.StandardReference;
    var multipleVersions = Model.Results != null && Model.Results.Count() > 1;
}

<a href="/standard/@Model.Id" class="govuk-back-link">Return to search</a>
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            @if (!ViewData.ModelState.IsValid || showConfirmedError || showVersionError)
            {
                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            @if (showConfirmedError)
                            {
                                <li><a href="#IsConfirmed"><span asp-validation-for="IsConfirmed"></span></a></li>
                            }
                            @if (showVersionError)
                            {
                                <li><a href="#SelectedVersions"><span asp-validation-for="SelectedVersions"></span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <h1 class="govuk-heading-xl govuk-!-margin-bottom-1">
                @if (string.IsNullOrEmpty(Model.ApplicationStatus))
                {
                    <span class="govuk-caption-l govuk-!-margin-bottom-2">Confirm you want to offer the standard:</span>
                }
                @Model.SelectedStandard?.Title
            </h1>
            <p class="govuk-body-l">Reference: @Model.SelectedStandard?.IFateReferenceNumber</p>

            <table class="govuk-table govuk-!-margin-bottom-7">
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="row">Effective from</th>
                        <td class="govuk-table__cell">@Model.SelectedStandard?.EffectiveFrom.ToSfaShortDateString()</td>
                    </tr>
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="row">Effective to</th>
                        <td class="govuk-table__cell">
                            @if (@Model.SelectedStandard?.EffectiveTo == null)
                            {
                                @Html.Raw("Expiry date not set")
                            }
                            else
                            {
                                @Model.SelectedStandard?.EffectiveTo.ToSfaShortDateString()
                            }
                        </td>
                    </tr>
                    @if (!multipleVersions)
                    {
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header" scope="row">Version</th>
                            <td class="govuk-table__cell">@Model.SelectedStandard?.Version</td>
                        </tr>
                    }
                </tbody>
            </table>

            <form asp-action="ConfirmStandard" asp-controller="Standard" asp-route-applicationId="@Model.Id">
                <input asp-for="StandardReference" value="@standardCode" type="hidden" />

                @if (multipleVersions)
                {
                    <div class="govuk-form-group @(showVersionError ? "govuk-form-group--error" : "")">
                        <fieldset class="govuk-fieldset" id="SelectedVersions">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Select all that apply</legend>
                            @if (showVersionError)
                            {
                                <span id="search-string-error" class="govuk-error-message" asp-validation-for="SelectedVersions"></span>
                            }
                            <div class="govuk-checkboxes govuk-checkboxes--small">
                                @foreach (var version in Model.Results)
                                {
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" id="@version.Version" value="@version.Version" name="SelectedVersions" type="checkbox">
                                        <label class="govuk-label govuk-checkboxes__label" for="@version.Version">
                                            Version @version.Version
                                        </label>
                                    </div>
                                }
                            </div>
                        </fieldset>
                    </div>

                    <table class="govuk-table govuk-!-margin-bottom-7">
                        <tbody class="govuk-table__body">
                            <tr class="govuk-table__row">
                                <td class="govuk-table__cell">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }

                @if (string.IsNullOrEmpty(Model.ApplicationStatus))
                {
                    <div class="govuk-form-group @(showConfirmedError ? "govuk-form-group--error" : "")">

                        @if (showConfirmedError)
                        {
                            <span id="search-string-error" class="govuk-error-message">Confirm you have read the assessment plan</span>
                        }

                        <div class="govuk-checkboxes">
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" asp-for="@Model.IsConfirmed" name="IsConfirmed" type="checkbox">
                                <label class="govuk-label govuk-checkboxes__label" for="IsConfirmed">
                                    By continuing, you confirm you have read and understood the relevant assessment plan(s) for <a href="@Model.SelectedStandard?.StandardPageUrl" target="_blank" class="govuk-link">this standard.</a>
                                </label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="govuk-button">Confirm and continue</button>
                }

                @if (!string.IsNullOrEmpty(Model.ApplicationStatus))
                {
                    if (Model.ApplicationStatus == "Approved")
                    {
                        <div class="das-apply-notification-summary govuk-!-margin-bottom-8">
                            <h2 class="govuk-heading-m govuk-!-margin-bottom-0">
                                You are already approved to assess this standard
                            </h2>
                        </div>
                    }
                    else
                    {
                        <div class="das-apply-notification-summary govuk-!-margin-bottom-8">
                            <h2 class="govuk-heading-m">
                                You have already applied to assess this standard
                            </h2>
                            <div class="govuk-body govuk-!-margin-bottom-0">
                                Your application is pending.
                            </div>
                        </div>
                    }
                }
            </form>
        </div>
    </div>


</main>
