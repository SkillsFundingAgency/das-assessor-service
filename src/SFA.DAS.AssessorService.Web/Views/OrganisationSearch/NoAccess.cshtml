
@model SFA.DAS.AssessorService.Web.ViewModels.Organisation.RequestAccessOrgSearchViewModel
@{
    ViewData["Title"] = "Request Access";
}
<a asp-action="Results" asp-controller="OrganisationSearch" asp-route-searchString="@Model.SearchString" asp-route-pageIndex="@Model.PageIndex" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="post" asp-action="DealingWithRequest" asp-controller="OrganisationSearch"  novalidate>
                <input asp-for="SearchString" type="hidden" />
                <input asp-for="Name" type="hidden" />
                <input asp-for="Ukprn" type="hidden" />
                <input asp-for="OrganisationType" type="hidden" />
                <input asp-for="Postcode" type="hidden" />
                <input asp-for="PageIndex" value="@Model.PageIndex" type="hidden"/>

                <h1 class="govuk-heading-xl">Request Access</h1>
                @if (@Model.RoEPAOApproved && @Model.OrganisationIsLive)
                {
                    <p class="govuk-body">
                        <strong class="govuk-tag">
                            ACTIVE ACCOUNT
                        </strong>
                    </p>
                }
                <table class="govuk-table table.responsive">
                    <thead>
                        <tr>
                            <th aria-hidden="true"></th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell"><strong>Organisation</strong></td>
                            <td class="govuk-table__cell">@Model.Name</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell"><strong>Address</strong></td>
                            <td class="govuk-table__cell">@Model.Address</td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell"><strong>Type</strong></td>
                            <td class="govuk-table__cell">@Model.OrganisationType</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.CompanyNumber))
                        {
                            <tr class="govuk-table__row">
                                <td class="govuk-table__cell"><strong>@Model.CompanyOrCharityDisplayText</strong></td>
                                <td class="govuk-table__cell">@Model.CompanyNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p class="govuk-body"> This is an active organisation on the Apprenticeship assessment service, you can request to join the organisation's account.</p>
                <button type="submit" class="govuk-button">Request Access</button>
            </form>
        </div>
    </div>
</main>