@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SFA.DAS.AssessorService.Web.ViewModels.Certificate.CertificateDateViewModel

@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Achievement date";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a class="link-back" asp-controller="CertificateOption" asp-action="Option">Back</a>
        
        <form class="apprentice-date-form" type="post" asp-controller="CertificateDate">
            <input type="hidden" name="fullDate" id="fullDate" class="date-input" data-mask="00/00/0000" />
            @Html.HiddenFor(c => c.Id)

            @* hidden with css by default *@
            <div class="js-error-summary error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                    There are errors with your submission
                </h2>
                <ul class="js-error-summary-list error-summary-list"></ul>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                        There are errors with your submission
                    </h2>
                    <ul class="error-summary-list">
                        <li><a sfa-validation-for="Date"></a></li>
                    </ul>
                </div>
            }

            <fieldset sfa-anyvalidationerror-class="after-error-summary">
                <legend id="Date">
                    <h1 class="heading-medium">
                        @*<span class="heading-secondary">@Model.GivenNames @Model.FamilyName</span>*@
                        @Localizer["Heading"]
                    </h1>
                </legend>
                
                <div class="form-group error-message-container" sfa-anyvalidationerror-class="form-group-error">
                    <span class="form-hint">
                        @Localizer["DateHint"]
                    </span>
                    <div class="form-date">
                        <div class="form-group form-group-day">
                            <label for="Day">Day</label>
                            <input class="form-control date-input" sfa-validation-for="Date" sfa-validationerror-class="form-control-error" asp-for="Day" type="text" maxlength="2">
                        </div>

                        <div class="form-group form-group-month">
                            <label for="Month">Month</label>
                            <input class="form-control date-input" sfa-validation-for="Date" sfa-validationerror-class="form-control-error" asp-for="Month" type="text" maxlength="2">
                        </div>

                        <div class="form-group form-group-year">
                            <label for="Year">Year</label>
                            <input class="form-control date-input" sfa-validation-for="Date" sfa-validationerror-class="form-control-error" asp-for="Year" type="text" maxlength="4">
                        </div>
                    </div>
                </div>
            </fieldset>

            <details role="group">
                <summary role="button" aria-controls="details-content-0" aria-expanded="false"><span class="summary">@Localizer["InfoHeader"]</span></summary>
                <div class="panel panel-border-narrow" id="details-content-0" aria-hidden="true">
                    <p>
                        @Localizer["InfoBody"]
                    </p>
                </div>
            </details>
            <button type="submit" class="button">@Localizer["ContinueButton"]</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{await Html.RenderPartialAsync("~/Views/Certificate/_DateScriptsPartial.cshtml"); }
}