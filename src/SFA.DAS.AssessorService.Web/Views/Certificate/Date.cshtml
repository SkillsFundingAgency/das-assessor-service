@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SFA.DAS.AssessorService.Web.ViewModels.Certificate.CertificateDateViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a asp-controller="CertificateOption" asp-action="Option" class="link-back">Back</a>
        @*<h1 class="heading-large">@Model.GivenNames @Model.FamilyName</h1>*@
        <h1 class="heading-large">@Localizer["Heading"]</h1>
        <form type="post" asp-controller="CertificateDate">
            @Html.HiddenFor(c => c.Id)


            <div class="form-group">
                <span class="form-hint">
                    @Localizer["DateHint"]
                </span>

                <div class="form-date">
                    <div class="form-group form-group-day">
                        <label for="Day">Day</label>
                        <input class="form-control" sfa-validation-for="Date" sfa-validationerror-class="form-control-error" asp-for="Day" type="number" pattern="[0-9]*" min="0" max="31">
                    </div>

                    <div class="form-group form-group-month">
                        <label for="Month">Month</label>
                        <input class="form-control" sfa-validation-for="Date" sfa-validationerror-class="form-control-error" asp-for="Month" type="number" pattern="[0-9]*" min="0" max="12">
                    </div>

                    <div class="form-group form-group-year">
                        <label for="Year">Year</label>
                        <input class="form-control" sfa-validation-for="Date" sfa-validationerror-class="form-control-error" asp-for="Year" type="number" pattern="[0-9]*" min="0" max="2118">
                    </div>
                </div>
                <span class="error-message" asp-validation-for="Date"></span>
            </div>

            <details role="group">
                <summary role="button" aria-controls="details-content-0" aria-expanded="false"><span class="summary">@Localizer["InfoHeader"]</span></summary>
                <div class="panel panel-border-narrow" id="details-content-0" aria-hidden="true">
                    <p>
                        @Localizer["InfoBody"]
                    </p>
                </div>
            </details>
            <button type="submit" class="button">@Localizer["ContinueButton"]</button>
        </form>
    </div>
</div>