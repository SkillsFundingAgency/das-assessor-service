@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SFA.DAS.AssessorService.Web.ViewModels.Certificate.CertificateAddressViewModel

@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Certificate destination";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a asp-controller="CertificateDate" asp-action="Date" class="link-back">Back</a>
        @*<h1 class="heading-large">@Model.GivenNames @Model.FamilyName</h1>*@
        <h1 class="heading-large">@Localizer["Heading"]</h1>
        <form type="post" asp-controller="CertificateAddress">
            @Html.HiddenFor(c => c.Id)


            <div class="form-group">

                <div class="form-group" sfa-validation-for="Name" sfa-validationerror-class="form-group-error">
                    <label class="form-label" for="Name">
                        <span class="form-label">@Localizer["Name"]</span>
                        <span class="form-hint">
                            @Localizer["NameHint"]
                        </span>
                        <span class="error-message" asp-validation-for="Name"></span>
                    </label>
                    <input class="form-control" name="Name" sfa-validation-for="Name" sfa-validationerror-class="form-control-error" asp-for="Name" type="text"/>
                </div>

                <div class="form-group" sfa-validation-for="Dept" sfa-validationerror-class="form-group-error">
                    <label class="form-label" for="Dept">
                        <span class="form-label">@Localizer["Dept"]</span>
                        <span class="form-hint">
                            @Localizer["DeptHint"]
                        </span>
                        <span class="error-message" asp-validation-for="Dept"></span>
                    </label>
                    <input class="form-control" name="Dept" sfa-validation-for="Dept" sfa-validationerror-class="form-control-error" asp-for="Dept" type="text"/>
                </div>

                <div class="form-group" sfa-validation-for="Employer" sfa-validationerror-class="form-group-error">
                    <label class="form-label" for="Employer">
                        <span class="form-label">@Localizer["Employer"]</span>
                        <span class="error-message" asp-validation-for="Employer"></span>
                    </label>
                    <input class="form-control" name="Employer" sfa-validation-for="Employer" sfa-validationerror-class="form-control-error" asp-for="Employer" type="text"/>
                </div>

                <div id="address-lookup" class="hide-nojs">
                    <div class="form-group form-group-compound" id="addressInputWrapper">
                        <label for="postcode-search" class="form-label">@Localizer["PostcodeLookup"]</label>
                        <span role="status" aria-live="polite" class="ui-helper-hidden-accessible"></span><input id="postcode-search" type="text" class="form-control ui-autocomplete-input" spellcheck="false" autocorrect="off" autocomplete="off">
                        <!-- <a href="#" class="close-postcode-lookup toggle-content">X</a> -->
                        <span class="visuallyhidden" id="ariaAddressEntered" aria-live="polite"></span>
                    </div>
                    <div id="address-manual" class="form-group form-group-compound">
                        <a href="#" class="copy-19" id="enterAddressManually">@Localizer["ManualAddressLink"]</a>
                        <span class="toggle-content hide-nojs loading-text" id="addressLoading">@Localizer["LoadingAddress"]</span>
                        <p style="color: red" id="postcodeServiceUnavailable" class="copy-19 toggle-content hide-nojs text">@Localizer["ServiceUnavailable"]</p>
                    </div>
                </div>

                <div id="addressManualWrapper">
                    <div id="address-details" class="address-manual-input">


                        <div class="form-group-compound address-item form-group" sfa-validation-for="AddressLine1" sfa-validationerror-class="form-group-error">
                            <label class="form-label" for="AddressLine1">@Localizer["Address"]</label>
                            <input autocomplete="off" class="form-control" name="AddressLine1" sfa-validation-for="AddressLine1" sfa-validationerror-class="form-control-error" asp-for="AddressLine1" type="text"/>
                            <span class="field-validation-valid" asp-validation-for="AddressLine1"></span>
                        </div>

                        <div class="form-group-compound address-item form-group" sfa-validation-for="AddressLine2" sfa-validationerror-class="form-group-error">
                            <label class="form-label" for="AddressLine2">@Localizer["AddressLine2"]</label>
                            <input autocomplete="off" class="form-control" name="AddressLine2" sfa-validation-for="AddressLine2" sfa-validationerror-class="form-control-error" asp-for="AddressLine2" type="text"/>
                            <span class="field-validation-valid" asp-validation-for="AddressLine2"></span>
                        </div>
                        <div class="form-group-compound address-item form-group" sfa-validation-for="AddressLine3" sfa-validationerror-class="form-group-error">
                            <label class="form-label" for="AddressLine3">@Localizer["AddressLine3"]</label>
                            <input autocomplete="off" class="form-control" name="AddressLine3" sfa-validation-for="AddressLine3" sfa-validationerror-class="form-control-error" asp-for="AddressLine3" type="text"/>
                            <span class="field-validation-valid" asp-validation-for="AddressLine3"></span>
                        </div>
                        <div class="form-group-compound address-item form-group" sfa-validation-for="City" sfa-validationerror-class="form-group-error">
                            <label class="form-label" for="City">@Localizer["City"]</label>
                            <input autocomplete="off" class="form-control" name="City" sfa-validation-for="City" sfa-validationerror-class="form-control-error" asp-for="City" type="text"/>
                            <span class="field-validation-valid" asp-validation-for="City"></span>
                        </div>
                        <div class="form-group-compound address-item form-group" sfa-validation-for="Postcode" sfa-validationerror-class="form-group-error">
                            <label class="form-label" for="Postcode">@Localizer["Postcode"]</label>
                            <input autocomplete="off" class="form-control" name="Postcode" sfa-validation-for="Postcode" sfa-validationerror-class="form-control-error" asp-for="Postcode" type="text"/>
                            <span class="field-validation-valid" asp-validation-for="Postcode"></span>
                        </div>

                    </div>
                </div>
            </div>

            <button type="submit" class="button">@Localizer["ContinueButton"]</button>
        </form>
    </div>
</div>