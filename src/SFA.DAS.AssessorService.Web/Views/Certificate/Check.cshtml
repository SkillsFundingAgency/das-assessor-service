@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SFA.DAS.AssessorService.Web.ViewModels.Certificate.CertificateCheckViewModel

@{
    ViewBag.Title = "Check and approve";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <a class="link-back" asp-controller="CertificateAddress" asp-action="Address">Back</a>

        <h1 class="heading-large">@Localizer["Heading"]</h1>
        
        <div class="info-summary">
            <h2 class="heading-medium">@Localizer["InfoHeader"]</h2>
            <p>@Localizer["InfoLine1"]</p>
            <p>@Localizer["InfoLine2"]</p>
        </div>

        <h2 class="heading-medium">
            Personal details
        </h2>

        <dl class="govuk-check-your-answers cya-questions-short">
            <div>
                <dt class="cya-question">
                    Name
                </dt>
                <dd class="cya-answer">
                    @Model.GivenNames @Model.FamilyName
                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    ULN
                </dt>
                <dd class="cya-answer">
                    @Model.Uln
                </dd>
            </div>
        </dl>


        <h2 class="heading-medium">
            Apprenticeship details
        </h2>

        <dl class="govuk-check-your-answers cya-questions-short">
            <div>
                <dt class="cya-question">
                    Standard
                </dt>
                <dd class="cya-answer">
                    @Model.Standard
                </dd>
                <dd class="cya-change">

                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    Level
                </dt>
                <dd class="cya-answer">
                    @Model.Level
                </dd>
                <dd class="cya-change">

                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    Option
                </dt>
                <dd class="cya-answer">
                    @Model.Option
                </dd>
                <dd class="cya-change">
                    <a asp-controller="CertificateOption" asp-action="Option" asp-route-redirecttocheck="true">
                        Change<span class="visually-hidden"> name</span>
                    </a>
                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    Grade
                </dt>
                <dd class="cya-answer">
                    @Model.SelectedGrade
                </dd>
                <dd class="cya-change">
                    <a asp-controller="CertificateGrade" asp-action="Grade" asp-route-redirecttocheck="true">
                        Change<span class="visually-hidden"> name</span>
                    </a>
                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    Apprenticeship achievement date
                </dt>
                <dd class="cya-answer">
                    @Model.AchievementDate.ToShortDateString()
                </dd>
                <dd class="cya-change">
                    <a asp-controller="CertificateDate" asp-action="Date" asp-route-redirecttocheck="true">
                        Change<span class="visually-hidden"> name</span>
                    </a>
                </dd>
            </div>
        </dl>

        <h2 class="heading-medium">
            Organisation details
        </h2>

        <dl class="govuk-check-your-answers cya-questions-short form-group">
            <div>
                <dt class="cya-question">
                    Name
                </dt>
                <dd class="cya-answer">
                    @Model.Name
                </dd>
                <dd class="cya-change">
                    <a asp-controller="CertificateAddress" asp-action="Address" asp-route-redirecttocheck="true">
                        Change<span class="visually-hidden"> name</span>
                    </a>
                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    Department (optional)
                </dt>
                <dd class="cya-answer">
                    @Model.Dept
                </dd>
                <dd class="cya-change">
                    <a asp-controller="CertificateAddress" asp-action="Address" asp-route-redirecttocheck="true">
                        Change<span class="visually-hidden"> name</span>
                    </a>
                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    Organisation
                </dt>
                <dd class="cya-answer">
                    @Model.Employer
                </dd>
                <dd class="cya-change">
                    <a asp-controller="CertificateAddress" asp-action="Address" asp-route-redirecttocheck="true">
                        Change<span class="visually-hidden"> name</span>
                    </a>
                </dd>
            </div>
            <div>
                <dt class="cya-question">
                    Address
                </dt>
                <dd class="cya-answer">
                    @Model.AddressLine1<br />
                    @Model.AddressLine2<br />
                    @Model.AddressLine3<br />
                    @Model.City<br />
                    @Model.Postcode
                </dd>
                <dd class="cya-change">
                    <a asp-controller="CertificateAddress" asp-action="Address" asp-route-redirecttocheck="true">
                        Change<span class="visually-hidden"> name</span>
                    </a>
                </dd>
            </div>
        </dl>

        <form type="post" asp-controller="CertificateCheck">
            @Html.HiddenFor(c => c.Id)
            <button type="submit" class="button">@Localizer["ContinueButton"]</button>
        </form>
    </div>
</div>