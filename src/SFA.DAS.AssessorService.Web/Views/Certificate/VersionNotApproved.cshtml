@using SFA.DAS.AssessorService.Web.Controllers;
@model SFA.DAS.AssessorService.Web.ViewModels.Certificate.CertificateVersionNotApprovedViewModel;

@{
    ViewBag.Title = $"Error: Your Organisation is not currently approved to assess version {Model.AttemptedVersion}";
    Layout = "_DashboardLayout";

    var routeData = Model.BackToCheckPage ? new Dictionary<string, string>() { { "redirectToCheck", "True" } } : null;
}

<a class="govuk-back-link" asp-controller="CertificateVersion" asp-action="Version" asp-all-route-data="routeData">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-width-container">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                    <div class="govuk-notification-banner__header">
                        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                            Important
                        </h2>
                    </div>
                    <div class="govuk-notification-banner__content">
                        <p class="govuk-notification-banner__heading">
                            Your organisation is not currently approved to assess version @Model.AttemptedVersion of @Model.StandardName (@Model.IFateReferenceNumber)
                        </p>
                        <p class="govuk-body">To record outcomes for this standard version, you need to <a asp-route="@OrganisationStandardsController.OrganisationStandardsIndexGetRoute" class="govuk-link--no-visited-state">opt in for this version in your account</a>.</p>
                    </div>
                </div>
                <h2 class="govuk-heading-m">What do you want to do next?</h2>
                <p class="govuk-body">
                    <a asp-controller="Search" asp-action="Index">Record another grade</a>
                    <br>
                    or
                    <br>
                    <a asp-controller="Dashboard" asp-action="Index">Return to account home</a>
                </p>
            </div>
        </div>
    </div>
</main>