@using Microsoft.AspNetCore.Mvc.Localization
@using Newtonsoft.Json
@using SFA.DAS.AssessorService.Web.ViewModels.Certificate.Private
@inject IViewLocalizer Localizer
@model SFA.DAS.AssessorService.Web.ViewModels.Certificate.Private.CertificateStandardCodeListViewModel

@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Select standard";
    Layout = "_Layout";
}

<div class="grid-row">
    <div class="column-two-thirds">
        @if (Model.BackToCheckPage)
        {
            <a class="link-back" asp-controller="CertificateCheck" asp-action="Check">Back</a>
        }
        else
        {
            <a asp-controller="CertificatePrivateFirstName" asp-action="FirstName" class="link-back">Back</a>
        }

        <form class="apprentice-firstname-form js-disable-on-submit" method="post" asp-action="StandardCode" asp-controller="CertificatePrivateStandardCode">
            @Html.HiddenFor(c => c.Id)

            @* hidden with css by default *@
            <div class="js-error-summary error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                    There's a problem
                </h2>
                <ul class="js-error-summary-list error-summary-list"></ul>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                        There's a problem
                    </h2>
                    <ul class="error-summary-list">
                        <li><a sfa-validation-for="StandardCodes"></a></li>
                        <li><a sfa-validation-for="SelectedStandardCode"></a></li>
                    </ul>
                </div>
            }

            <fieldset sfa-anyvalidationerror-class="after-error-summary">
                <legend id="Name">
                    <h1 class="heading-large">
                        @Localizer["Heading"]
                    </h1>
                </legend>

                <div class="form-group">
                    <label for="StandardCodes">
                        <span class="form-label-bold visually-hidden">@Localizer["StandardCodes"]</span>
                        <span class="error-message" asp-validation-for="StandardCodes"></span>
                    </label>
                    <select class="form-control" asp-for="SelectedStandardCode" asp-items="@(new SelectList(Model.StandardCodes,"Value","Text"))">
                        <option value="">Please select one</option>
                    </select>
                    @*<span class="form-control" sfa-validation-for="@Model.SelectedUkprn" sfa-validationerror-class="form-control-error" />*@
                </div>
                
            </fieldset>

            <button type="submit" class="button">@Localizer["ContinueButton"]</button>
        </form>
    </div>
</div>

<script type="text/javascript">
    // var certificateStandardCodeListViewModel = @Html.Raw(JsonConvert.SerializeObject(Model));
    // console.log(certificateStandardCodeListViewModel.StandardCodes);
</script>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{ await Html.RenderPartialAsync("~/Views/Certificate/_StandardCodesScriptsPartial.cshtml"); }
}