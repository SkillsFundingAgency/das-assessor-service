@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@using SFA.DAS.AssessorService.Domain.Paging
@model SFA.DAS.AssessorService.Domain.Paging.PaginatedList<SFA.DAS.AssessorService.Api.Types.Models.GetEpaoRegisteredStandardsResponse>

@{
    ViewBag.Title = "Standards";
    Layout = "_DashboardLayout";
}


<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-large">Standards</h1>
        <div class="das-standout-box">
            <a href="https://www.smartsurvey.co.uk/s/apply-banner/" target="_blank">Complete our survey</a> to help us improve this section of the Apprenticeship assessment service.
        </div>
    @if (Model.Items.Any())
    {
        <table class="table responsive table-font-xsmall">
            <thead>
            <tr>
                <th>
                    @Localizer["Standard"]
                </th>
                <th class="numeric">
                    @Localizer["Reference"]
                </th>
                <th class="numeric">
                    @Localizer["Code"]
                </th>
                <th class="numeric">
                    @Localizer["Level"]
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td data-label="@Localizer[" Standard name"]" class="nowrap">
                        @Html.DisplayFor(modelItem => item.StandardName)
                    </td>
                    <td data-label="@Localizer[" Standard reference"]" class="numeric">
                        @Html.DisplayFor(modelItem => item.StandardReference)
                    </td>
                    <td data-label="@Localizer[" Standard code"]" class="numeric">
                        @Html.DisplayFor(modelItem => item.StandardCode)
                    </td>
                    <td data-label="@Localizer[" Standard level"]" class="numeric">
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                </tr>

            }
            </tbody>
        </table>
    }
    else
    {
        <div class="info-summary">
            <h3 class="heading-medium">You are not registered with any standards.</h3>
        </div>
    }
    </div>
</div>

@if (Model.HasPreviousPage || Model.HasNextPage)
{
<div class="grid-row">
    <div class="column-full">
        <div class="page-navigation">

            @if (Model.HasPreviousPage)
            {
                <a 
                    asp-action="Index"
                    asp-controller="OrganisationStandards"
                    asp-route-pageIndex="@(Model.PageIndex - 1)"
                    class="previous"
                >
                    <i class="arrow-button icon-left-open">&#xe800;</i>
                    <span class="description">Previous <span class="hide-mob">page</span></span>
                    <span class="counter">Page <span class="prevPage">@(Model.PageIndex - 1)</span> of <span class="totalPage">@(Model.TotalPages)</span></span>
                </a>
            }

            @if (Model.HasNextPage)
            {
                <a 
                    asp-controller="OrganisationStandards"
                    asp-action="Index"
                    asp-route-pageIndex="@(Model.PageIndex + 1)"
                    class="next"
                >
                    <i class="arrow-button icon-right-open">&#xe801;</i>
                    <span class="description">Next <span class="hide-mob">page</span></span>
                    <span class="counter">Page <span class="nextPage">@(Model.PageIndex + 1)</span> of <span class="totalPage">@(Model.TotalPages)</span></span>
                </a>
            }

        </div>
    </div>
</div>
}