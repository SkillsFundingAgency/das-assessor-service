
@{
    ViewData["Title"] = "Apply to assess a standard";
    Layout = "_DashboardLayout";
}
<a asp-action="Index" asp-controller="Dashboard" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Apply to assess a standard</h1>
            <p class="govuk-body">Use this service to apply to:</p>

            <ul class="govuk-list govuk-list--bullet">
                <li>apply for a new standard to assess</li>
            </ul>

            @*<a href="@TempData["applyToAssessAStandard"]"  class="button button-start">Start now</a>*@
            <a  asp-action="GoToApplyToAccessStandard" asp-controller="ApplyToAccessStandard" class="govuk-button govuk-button--start">Start now</a>

            <h2 class="govuk-heading-m">Before you start</h2>
            <p class="govuk-body">To get on the register of end point assessment organisations for a standard, you need to answer questions abount your organisations assessment capabilities and capacity.</p>
            <p class="govuk-body">
                <a class="govuk-link" href="https://www.gov.uk/guidance/register-of-end-point-assessment-organisations#how-to-apply-to-the-register-of-end-point-assessment-organisations"  target="_blank">Read the pre-application guidance</a> on your organisation's capabilities and capacity to assess a standard.
            </p>
        </div>
    </div>
</main>