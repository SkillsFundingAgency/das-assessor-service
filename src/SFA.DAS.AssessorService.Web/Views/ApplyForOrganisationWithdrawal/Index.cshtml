
@{
    ViewData["Title"] = "Apply for organisation withdrawal";
    Layout = "_DashboardLayout";
}
<a asp-action="Index" asp-controller="Dashboard" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Apply to assess a standard</h1>
            <p class="govuk-body">Use this service to apply to:</p>

            <ul class="govuk-list govuk-list--bullet">
                <li>apply for a new standard to assess</li>
            </ul>

            <form asp-action="OrganisationWithdrawalApplication" asp-controller="Application" method="post">
                <button class="govuk-button" type="submit">Start withdrawal now</button>
            </form>

            <a asp-action="GoToApplyForOrganisationWithdrawal" asp-controller="ApplyForOrganisationWithdrawal" role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8" data-module="govuk-button">
                Start now (link)
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                </svg>
            </a>

            <h2 class="govuk-heading-m">Before you start</h2>
            <p class="govuk-body"></p>
            <p class="govuk-body">
                <a class="govuk-link" href="" target="_blank"></a>
            </p>
        </div>
    </div>
</main>