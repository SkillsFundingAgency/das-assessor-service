{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateBaseUrl": {
            "type": "string"
        },
        "environmentName": {
            "type": "string"
        },
        "uiAppServiceName": {
            "type": "string"
        },
        "apiAppServiceName": {
            "type": "string"
        },
        "manageAppServiceName": {
            "type": "string"
        },
        "externalApiAppServiceName": {
            "type": "string"
        },
        "externalApiSandboxAppServiceName": {
            "type": "string"
        },        
        "uiKeyvaultCertificateName": {
            "type": "string"
        },
        "apiKeyvaultCertificateName": {
            "type": "string"
        },
        "manageKeyvaultCertificateName": {
            "type": "string"
        },
        "externalAPiKeyvaultCertificateName": {
            "type": "string"
        },
        "externalAPiSandboxKeyvaultCertificateName": {
            "type": "string"
        },        
        "uiCustomHostname": {
            "type": "string"
        },
        "apiCustomHostname": {
            "type": "string"
        },
        "manageCustomHostname": {
            "type": "string"
        },
        "externalApiCustomHostname": {
            "type": "string"
        },
        "externalApiSandboxCustomHostname": {
            "type": "string"
        },        
        "functionAppNames": {
            "type": "array"
        },
        "storageAccountName": {
            "type": "string"
        },
        "serviceBusName": {
            "type": "string"
        },
        "sharedAppServicePlanName": {
            "type": "string"
        },
        "sharedAppServicePlanResourceGroup": {
            "type": "string"
        },
        "configurationStorageConnectionString": {
            "type": "securestring"
        },
        "loggingRedisConnectionString": {
            "type": "securestring"
        },
        "sharedKeyVaultName": {
            "type": "string"
        },
        "sharedManagementResourceGroup": {
            "type": "string"
        }
    },
    "variables": {
        "appServiceTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/app-service-resources.json')]",
        "functionAppTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/function-app-resources.json')]",
        "serviceBusTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/service-bus-resources.json')]",
        "storageTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/storage-resources.json')]",
        "sharedAppServicePlanId": "[resourceId(parameters('sharedAppServicePlanResourceGroup'), 'Microsoft.Web/serverfarms', parameters('sharedAppServicePlanName'))]"
    },
    "resources": [
        {
            "name": "[concat('AppService-', parameters('uiAppServiceName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('appServiceTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('uiAppServiceName')]"
                    },
                    "appServicePlanId": {
                        "value": "[variables('sharedAppServicePlanId')]"
                    },
                    "configurationStorageConnectionString": {
                        "value": "[parameters('configurationStorageConnectionString')]"
                    },
                    "configEnvironmentName": {
                        "value": "[parameters('environmentName')]"
                    },
                    "loggingRedisConnectionString": {
                        "value": "[parameters('loggingRedisConnectionString')]"
                    },
                    "keyvaultCertificateName": {
                        "value": "[parameters('uiKeyvaultCertificateName')]"
                    },
                    "sharedAppServicePlanResourceGroup": {
                        "value": "[parameters('sharedAppServicePlanResourceGroup')]"
                    },
                    "customHostname": {
                        "value": "[parameters('uiCustomHostname')]"
                    }
                }
            }
        },
        {
            "name": "[concat('AppService-', parameters('apiAppServiceName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('appServiceTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('apiAppServiceName')]"
                    },
                    "appServicePlanId": {
                        "value": "[variables('sharedAppServicePlanId')]"
                    },
                    "configurationStorageConnectionString": {
                        "value": "[parameters('configurationStorageConnectionString')]"
                    },
                    "configEnvironmentName": {
                        "value": "[parameters('environmentName')]"
                    },
                    "loggingRedisConnectionString": {
                        "value": "[parameters('loggingRedisConnectionString')]"
                    },
                    "keyvaultCertificateName": {
                        "value": "[parameters('apiKeyvaultCertificateName')]"
                    },
                    "sharedAppServicePlanResourceGroup": {
                        "value": "[parameters('sharedAppServicePlanResourceGroup')]"
                    },
                    "customHostname": {
                        "value": "[parameters('apiCustomHostname')]"
                    }
                }
            }
        },
        {
            "name": "[concat('AppService-', parameters('manageAppServiceName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('appServiceTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('manageAppServiceName')]"
                    },
                    "appServicePlanId": {
                        "value": "[variables('sharedAppServicePlanId')]"
                    },
                    "configurationStorageConnectionString": {
                        "value": "[parameters('configurationStorageConnectionString')]"
                    },
                    "configEnvironmentName": {
                        "value": "[parameters('environmentName')]"
                    },
                    "loggingRedisConnectionString": {
                        "value": "[parameters('loggingRedisConnectionString')]"
                    },
                    "keyvaultCertificateName": {
                        "value": "[parameters('manageKeyvaultCertificateName')]"
                    },
                    "sharedAppServicePlanResourceGroup": {
                        "value": "[parameters('sharedAppServicePlanResourceGroup')]"
                    },
                    "customHostname": {
                        "value": "[parameters('manageCustomHostname')]"
                    }
                }
            }
        },
        {
            "name": "[concat('AppService-', parameters('externalApiAppServiceName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('appServiceTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('externalApiAppServiceName')]"
                    },
                    "appServicePlanId": {
                        "value": "[variables('sharedAppServicePlanId')]"
                    },
                    "configurationStorageConnectionString": {
                        "value": "[parameters('configurationStorageConnectionString')]"
                    },
                    "configEnvironmentName": {
                        "value": "[parameters('environmentName')]"
                    },
                    "loggingRedisConnectionString": {
                        "value": "[parameters('loggingRedisConnectionString')]"
                    },
                    "keyvaultCertificateName": {
                        "value": "[parameters('externalApiKeyvaultCertificateName')]"
                    },
                    "sharedAppServicePlanResourceGroup": {
                        "value": "[parameters('sharedAppServicePlanResourceGroup')]"
                    },
                    "customHostname": {
                        "value": "[parameters('externalApiCustomHostname')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[parameters('externalApiSandboxAppServiceName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/app-service.json",
                "contentVersion": "1.0.0.0"
              },
              "parameters": {
                "appServiceName": {
                  "value": "[parameters('externalApiSandboxAppServiceName')]"
                },
                "appServicePlanName": {
                  "value": "[parameters('sharedAppServicePlanName')]"
                },
                "appServicePlanResourceGroup": {
                  "value": "[parameters('sharedAppServicePlanResourceGroup')]"
                },
                "appServiceAppSettings": {
                  "value": [
                    {
                        "name": "ApplicationInsights:InstrumentationKey",
                        "value": "[reference(concat(parameters('externalApiSandboxAppServiceName'),'-ai')).outputs.InstrumentationKey.value]"
                    },                      
                    {
                      "name": "EnvironmentName",
                      "value": "[parameters('environmentName')]"
                    },
                    {
                      "name": "ConfigurationStorageConnectionString",
                      "value": "[parameters('configurationStorageConnectionString')]"
                    },
                    {
                        "name": "InstanceName",
                        "value": "[concat(parameters('environmentName'),' (Sandbox)')]"
                    },
                    {
                        "name": "UseSandboxServices",
                        "value": "yes"
                    }                    
                  ]
                },
                "appServiceConnectionStrings": {
                  "value": [
                    {
                      "name": "Redis",
                      "connectionString": "[parameters('loggingRedisConnectionString')]",
                      "type": "Custom"
                    }
                  ]
                },
                "customHostName": {
                    "value": "[parameters('externalApiSandboxCustomHostname')]"
                },                
                "certificateThumbprint": {
                    "value": "[reference(resourceId(parameters('sharedAppServicePlanResourceGroup'), 'Microsoft.Web/certificates', parameters('externalApiSandboxKeyvaultCertificateName')), '2016-03-01').Thumbprint]"
                }                
              }
            },
            "dependsOn": [
            ]
        },
        {
            "apiVersion": "2017-08-01",
            "name": "[concat(parameters('externalApiSandboxAppServiceName'),'-ai')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/application-insights.json",
                "contentVersion": "1.0.0.0"
              },
              "parameters": {
                "appInsightsName": {
                  "value": "[parameters('externalApiSandboxAppServiceName')]"
                },
                "attachedService": {
                  "value": "[parameters('externalApiSandboxAppServiceName')]"
                }
              }
            },
            "dependsOn": [
            ]
        },        
        {
            "name": "StorageAccount",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    }
                }
            }
        },
        {
            "name": "[concat('FunctionApp-', parameters('functionAppNames')[copyIndex()])]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('functionAppTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[parameters('functionAppNames')[copyIndex()]]"
                    },
                    "appServicePlanId": {
                        "value": "[variables('sharedAppServicePlanId')]"
                    },
                    "configurationStorageConnectionString": {
                        "value": "[parameters('configurationStorageConnectionString')]"
                    },
                    "configEnvironmentName": {
                        "value": "[parameters('environmentName')]"
                    },
                    "storageConnectionString": {
                        "value": "[reference('StorageAccount').outputs.StorageConnectionString.value]"
                    },
                    "loggingRedisConnectionString": {
                        "value": "[parameters('loggingRedisConnectionString')]"
                    }
                }
            },
            "copy": {
                "name": "FunctionAppCopy",
                "count": "[length(parameters('functionAppNames'))]"
            },
            "dependsOn": [
                "StorageAccount"
            ]
        },
        {
            "name": "ServiceBus",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('serviceBusTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serviceBusName": {
                        "value": "[parameters('serviceBusName')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
